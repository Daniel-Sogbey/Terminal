{{template "base" .}}

{{define "content"}}
<!-- CONTAINER -->
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="mt-5">Search for availability</h1>
      <form
        action="/search-availability"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="form-row">
          <!-- START DATE -->
          <input
            type="text"
            name="csrf_token"
            value="{{.CSRFToken }}"
            class="form-control"
          />
          <div class="col">
            <div class="form-row" id="reservation-dates">
              <div class="col">
                <input
                  required
                  type="text"
                  name="start"
                  class="form-control"
                  placeholder="Arrival"
                  autocomplete="off"
                />
              </div>

              <!-- END DATE -->
              <div class="col">
                <input
                  required
                  type="text"
                  name="end"
                  class="form-control"
                  placeholder="Departure"
                  autocomplete="off"
                />
              </div>
            </div>
          </div>
        </div>

        <hr />

        <button type="submit" class="btn btn-primary">
          Search Availability
        </button>
      </form>
    </div>
  </div>
</div>
{{ end }}

{{define "js"}}

<script>
  const elem = document.getElementById("reservation-dates");
  const rangepicker = new DateRangePicker(elem, {
    formart: "yyyy-mm-dd",
    minDate: new Date(),
  });
</script>

{{ end }}
