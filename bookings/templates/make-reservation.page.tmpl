{{template "base" .}}

{{define "content"}}

<!-- CONTAINER -->
<div class="container">
  <div class="row">
    <div class="col">
      {{$res := index .Data "reservation"}}
      <h1>Make reservation</h1>

      <p>
        <b>Reservation details</b> <br />

        Arrival : {{index .StringMap "start_date"}} <br />
        Departure : {{index .StringMap "end_date"}} <br />
        Room : {{ $res.Room.RoomName }}
      </p>

      <form action="" method="post" class="" novalidate>
        <div class="form-group">
          <label> Start Date</label>
          <input type="text" name="start_date" value="{{index .StringMap "start_date"


          }}" class="form-control" readonly/>
        </div>

        <div class="form-group">
          <label> End Date</label>
          <input type="text" name="end_date" value="{{index .StringMap "end_date"


          }}" class="form-control" readonly />
        </div>

        <!-- CSRFTOKEN -->
        <div class="form-group mt-5">
          <label> CSRFToken</label>
          <input
            type="text"
            class="form-control"
            name="csrf_token"
            value="{{.CSRFToken}}"
            readonly
          />
        </div>

        <!-- FIRST NAME -->
        <div class="form-group mt-5">
          <label for="first_name">First name</label>
          {{with .Form.Errors.Get "first_name"}}
          <label class="text-danger">{{.}}</label>
          {{ end }}
          <input type="text" name="first_name" id="first_name"
          class="form-control
          {{with .Form.Errors.Get "first_name" }} is-invalid {{ end }}" required
          autocomplete="off" value="{{ $res.FirstName }}" />
        </div>

        <!-- LAST NAME -->
        <div class="form-group">
          <label for="last_name">Last name</label>
          {{with .Form.Errors.Get "last_name"}}
          <label class="text-danger">{{.}}</label>
          {{ end }}
          <input type="text" name="last_name" id="last_name" class="form-control
          {{with .Form.Errors.Get "last_name"}} is-invalid {{ end }}" required
          autocomplete="off" value="{{ $res.LastName }}" />
        </div>

        <!-- EMAIL ADDRESS -->
        <div class="form-group">
          <label for="email">Email</label>
          {{with .Form.Errors.Get "email"}}
          <label class="text-danger">{{.}}</label>
          {{ end }}
          <input type="text" name="email" id="email" class="form-control
          {{with .Form.Errors.Get "email"}} is-invalid {{ end }}" required
          autocomplete="off" value="{{ $res.Email }}" />
        </div>

        <!-- PHONE NUMBER -->
        <div class="form-group">
          <label for="phone">Phone</label>
          {{with .Form.Errors.Get "phone"}}
          <label class="text-danger">{{.}}</label>
          {{ end }}
          <input type="text" name="phone" id="phone" class="form-control
          {{with .Form.Errors.Get "phone"}} is-invalid {{ end }} " required
          autocomplete="off" value="{{ $res.Phone }}" />
        </div>

        <div class="form-group">
          <label>RoomID</label>
          <input
            type="text"
            name="room_id"
            class="form-control"
            value="{{$res.RoomID}}"
            readonly
          />
        </div>

        <input type="submit" class="btn btn-primary" value="Make Reservation" />
      </form>
    </div>
  </div>
</div>

{{ end }}
